<Window x:Class="OOP_LB6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OOP_LB6"
        mc:Ignorable="d" 
        Title="MainWindow" Height="450" Width="800" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="15"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <UniformGrid Grid.Row="0" Columns="4">
            <Button Content="Create" Cursor="Hand" Click="Create_Click"/>
            <Button Content="Open" Cursor="Hand" Click="Open_Click"/>
            <Button Content="Save" Cursor="Hand" Click="Save_Click"/>
            <Button Content="Show text" Cursor="Hand" Click="ShowText_Click"/>
        </UniformGrid>
        <TextBlock Text="После открытия файла, нажмите ShowText" Grid.Row="1" HorizontalAlignment="Center"
                   Foreground="Red"  FontSize="10"/>
        <TextBox x:Name="DisplayText" Grid.Row="2" TextWrapping="Wrap"/>
    </Grid>
</Window>
